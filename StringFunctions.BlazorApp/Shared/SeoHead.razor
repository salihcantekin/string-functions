@using StringFunctions.BlazorApp.Services
@using StringFunctions.BlazorApp.Models
@inject SeoService SeoService
@inject NavigationManager NavigationManager
@inject SiteConfigService SiteConfigService

<HeadContent>
    @if (_metadata != null)
    {
        <!-- Primary Meta Tags -->
        <title>@_metadata.Title</title>
        <meta name="title" content="@_metadata.Title" />
        <meta name="description" content="@_metadata.Description" />
        @if (!string.IsNullOrEmpty(_metadata.Keywords))
        {
            <meta name="keywords" content="@_metadata.Keywords" />
        }
        <link rel="canonical" href="@_metadata.Url" />
        
        <!-- Open Graph (General - works for LinkedIn, Facebook, etc.) -->
        <meta property="og:type" content="@_metadata.Type" />
        <meta property="og:url" content="@_metadata.Url" />
        <meta property="og:title" content="@_metadata.Title" />
        <meta property="og:description" content="@_metadata.Description" />
        <meta property="og:image" content="@GetFullImageUrl(_metadata.ImageUrl)" />
        <meta property="og:image:secure_url" content="@GetFullImageUrl(_metadata.ImageUrl)" />
        <meta property="og:image:alt" content="@_metadata.Title" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta property="og:image:type" content="image/png" />
        <meta property="og:site_name" content="@siteName" />
        <meta property="og:locale" content="@locale" />
        
        <!-- Twitter Card -->
        <meta name="twitter:card" content="@twitterCardType" />
        <meta name="twitter:url" content="@_metadata.Url" />
        <meta name="twitter:title" content="@_metadata.Title" />
        <meta name="twitter:description" content="@_metadata.Description" />
        <meta name="twitter:image" content="@GetFullImageUrl(_metadata.ImageUrl)" />
        <meta name="twitter:image:alt" content="@_metadata.Title" />
        
        <!-- Additional SEO -->
        <meta name="robots" content="index, follow" />
        <meta name="language" content="English" />
        <meta name="revisit-after" content="7 days" />
        <meta name="author" content="@author" />
        
        <!-- Structured Data -->
        <script type="application/ld+json">
            @((MarkupString)SeoService.GenerateStructuredData(_metadata))
        </script>
    }
</HeadContent>

@code {
    [Parameter]
    public string? Route { get; set; }

    private PageMetadata? _metadata;
    private string siteName = "String Functions";
    private string siteUrl = "https://stringfunctions.net";
    private string locale = "en_US";
    private string twitterCardType = "summary_large_image";
    private string author = "String Functions";
    private string ogLogoUrl = "/images/logo.png";
    private string ogIconUrl = "/images/icon-512.png";

    protected override async Task OnInitializedAsync()
    {
        await LoadSiteConfig();
        await UpdateMetadataAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        await UpdateMetadataAsync();
    }

    private async Task LoadSiteConfig()
    {
        try
        {
            var config = await SiteConfigService.GetSiteConfigAsync();
            siteName = config.SiteName;
            siteUrl = config.SiteUrl;
            author = config.Author;
            locale = config.Seo.Locale;
            twitterCardType = config.Seo.TwitterCardType;
            ogLogoUrl = config.Seo.OgLogoUrl;
            ogIconUrl = config.Seo.OgIconUrl;
        }
        catch
        {
            // If config loading fails, default values are already set
            // SEO tags will still render with defaults
        }
    }

    private async Task UpdateMetadataAsync()
    {
        var route = Route ?? NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        _metadata = await SeoService.GetPageMetadataAsync(route);
    }

    private string GetFullImageUrl(string imageUrl)
    {
        if (string.IsNullOrEmpty(imageUrl)) return "";
        if (imageUrl.StartsWith("http")) return imageUrl;
        return $"{siteUrl}{imageUrl}";
    }
}
