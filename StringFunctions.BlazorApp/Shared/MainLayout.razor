@inherits LayoutComponentBase
@using StringFunctions.BlazorApp.Services
@using StringFunctions.BlazorApp.Models
@using Microsoft.AspNetCore.Components.Routing
@inject ThemeService ThemeService
@inject NavigationManager NavigationManager
@inject UserPreferencesService UserPreferences
@inject ToolsService ToolsService
@inject FavoritesService FavoritesService
@implements IDisposable

<div class="layout-container @(ThemeService.IsDarkMode ? "dark-theme" : "light-theme") @(sidebarCollapsed ? "sidebar-collapsed" : "") @(mobileMenuOpen ? "mobile-menu-open" : "")">
    <header class="top-header">
        <div class="header-left">
            <button class="menu-toggle" @onclick="ToggleMobileMenu" title="Toggle menu">
                <FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Custom" CustomColor="#ffffff" />
            </button>
            <NavLink class="header-logo-link" href="" Match="NavLinkMatch.All" @onclick="OnHomeClick">
                <img src="images/logo.png" alt="String Functions" class="header-logo" />
            </NavLink>
        </div>
        <div class="header-actions">
            <DonationQR IconColor="@("#ffffff")" />
            <FluentSelect TOption="string" 
                         Value="@ThemeService.CurrentTheme.ToString()" 
                         ValueChanged="OnThemeChanged"
                         Style="min-width: 120px;">
                <FluentOption Value="Light">&#9728;&#65039; Light</FluentOption>
                <FluentOption Value="Dark">&#127769; Dark</FluentOption>
                <FluentOption Value="System">&#128187; System</FluentOption>
            </FluentSelect>
        </div>
    </header>

    <div class="sidebar-overlay" @onclick="CloseMobileMenu"></div>

    <div class="main-content">
        <nav class="sidebar">
            <div class="sidebar-header desktop-only">
                <button class="sidebar-toggle-btn" @onclick="ToggleSidebar" title="@(sidebarCollapsed ? "Expand" : "Collapse")">
                    @if (sidebarCollapsed)
                    {
                        <FluentIcon Value="@(new Icons.Regular.Size20.PanelLeftExpand())" Color="Color.Custom" CustomColor="@IconColor" />
                    }
                    else
                    {
                        <FluentIcon Value="@(new Icons.Regular.Size20.PanelLeftContract())" Color="Color.Custom" CustomColor="@IconColor" />
                        <span class="toggle-text">Collapse</span>
                    }
                </button>
            </div>

            <div class="sidebar-search @(sidebarCollapsed ? "collapsed" : "")">
                @if (sidebarCollapsed)
                {
                    <button class="search-icon-btn" @onclick="ExpandSidebar" title="Search">
                        <FluentIcon Value="@(new Icons.Regular.Size20.Search())" Color="Color.Custom" CustomColor="@IconColor" />
                    </button>
                }
                else
                {
                    <FluentTextField @bind-Value="@searchQuery" 
                                    Placeholder="Search tools..." 
                                    @oninput="OnSearchChanged"
                                    Style="width: 100%;">
                        <FluentIcon Value="@(new Icons.Regular.Size16.Search())" Slot="start" Color="Color.Custom" CustomColor="@IconColor" />
                    </FluentTextField>
                }
            </div>

            @if (!string.IsNullOrEmpty(searchQuery) && searchResults.Any())
            {
                <div class="search-results">
                    @foreach (var tool in searchResults)
                    {
                        <NavLink href="@tool.Route" class="nav-link search-result-item" ActiveClass="active" Match="NavLinkMatch.All" @onclick="ClearSearchAndCloseMenu">
                            <FluentIcon Value="@GetIcon(tool.Icon)" Color="Color.Custom" CustomColor="@GetIconColor(IsActive(tool.Route))" />
                            <span class="nav-text">@tool.Name</span>
                            <span class="search-category">@GetCategoryName(tool.Id)</span>
                        </NavLink>
                    }
                </div>
            }
            else if (!string.IsNullOrEmpty(searchQuery))
            {
                <div class="no-results">No tools found</div>
            }
            else
            {
                <div class="nav-section">
                    <NavLink href="/" class="nav-link" ActiveClass="active" Match="NavLinkMatch.All" @onclick="OnHomeClick">
                        <FluentIcon Value="@(new Icons.Regular.Size20.Home())" Color="Color.Custom" CustomColor="@GetIconColor(IsActive("/"))" />
                        <span class="nav-text">Home</span>
                    </NavLink>
                </div>

                @if (favoriteTools.Any())
                {
                    <div class="nav-section">
                        <div class="nav-group-header" @onclick="() => ToggleGroup(-1)">
                            <FluentIcon Value="@(new Icons.Filled.Size20.Star())" Color="Color.Custom" CustomColor="#f59e0b" />
                            <span class="nav-text">Favorites</span>
                            @if (expandedGroups.Contains(-1))
                            {
                                <FluentIcon Value="@(new Icons.Regular.Size16.ChevronUp())" Color="Color.Custom" CustomColor="@IconColor" class="chevron-icon" />
                            }
                            else
                            {
                                <FluentIcon Value="@(new Icons.Regular.Size16.ChevronDown())" Color="Color.Custom" CustomColor="@IconColor" class="chevron-icon" />
                            }
                        </div>
                        @if (expandedGroups.Contains(-1))
                        {
                            <div class="nav-group-items">
                                @foreach (var tool in favoriteTools)
                                {
                                    <div class="nav-link-container">
                                        <NavLink href="@tool.Route" class="@(IsActiveInCategory(tool.Route, true) ? "nav-link active" : "nav-link")" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
                                            <FluentIcon Value="@GetIcon(tool.Icon)" Color="Color.Custom" CustomColor="@GetIconColor(IsActiveInCategory(tool.Route, true))" />
                                            <span class="nav-text">@tool.Name</span>
                                        </NavLink>
                                        <button class="favorite-btn active" @onclick="() => ToggleFavorite(tool.Id)" title="Remove from favorites">
                                            <FluentIcon Value="@(new Icons.Filled.Size16.Star())" Color="Color.Custom" CustomColor="#f59e0b" />
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }

                @foreach (var category in categories)
                {
                    <div class="nav-section">
                        <div class="nav-group-header" @onclick="() => ToggleGroup(category.Order)">
                            <FluentIcon Value="@GetIcon(category.Icon)" Color="Color.Custom" CustomColor="@IconColor" />
                            <span class="nav-text">@category.Name</span>
                            @if (expandedGroups.Contains(category.Order))
                            {
                                <FluentIcon Value="@(new Icons.Regular.Size16.ChevronUp())" Color="Color.Custom" CustomColor="@IconColor" class="chevron-icon" />
                            }
                            else
                            {
                                <FluentIcon Value="@(new Icons.Regular.Size16.ChevronDown())" Color="Color.Custom" CustomColor="@IconColor" class="chevron-icon" />
                            }
                        </div>
                        @if (expandedGroups.Contains(category.Order))
                        {
                            <div class="nav-group-items">
                                @foreach (var tool in category.Tools)
                                {
                                    <div class="nav-link-container">
                                        <NavLink href="@tool.Route" class="@($"nav-link{(tool.IsNew ? " new-badge" : "")}{(IsActiveInCategory(tool.Route, false) ? " active" : "")}")" Match="NavLinkMatch.All" @onclick="CloseMobileMenu">
                                            <FluentIcon Value="@GetIcon(tool.Icon)" Color="Color.Custom" CustomColor="@GetIconColor(IsActiveInCategory(tool.Route, false))" />
                                            <span class="nav-text">@tool.Name</span>
                                        </NavLink>
                                        <button class="favorite-btn @(favoriteIds.Contains(tool.Id) ? "active" : "")" 
                                                @onclick="() => ToggleFavorite(tool.Id)" 
                                                title="@(favoriteIds.Contains(tool.Id) ? "Remove from favorites" : "Add to favorites")">
                                            @if (favoriteIds.Contains(tool.Id))
                                            {
                                                <FluentIcon Value="@(new Icons.Filled.Size16.Star())" Color="Color.Custom" CustomColor="#f59e0b" />
                                            }
                                            else
                                            {
                                                <FluentIcon Value="@(new Icons.Regular.Size16.Star())" Color="Color.Custom" CustomColor="@IconColor" />
                                            }
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            }
        </nav>

        <main class="page-content">
            @Body
        </main>
    </div>
</div>

