@code {
    private HashSet<int> expandedGroups = new();
    private bool sidebarCollapsed = false;
    private bool mobileMenuOpen = false;
    private string searchQuery = string.Empty;
    private List<ToolCategory> categories = new();
    private List<Tool> searchResults = new();
    private List<Tool> favoriteTools = new();
    private HashSet<string> favoriteIds = new();
    private string IconColor => ThemeService.IsDarkMode ? "#b3b3b3" : "#323130";

    protected override async Task OnInitializedAsync()
    {
        categories = await ToolsService.GetCategoriesAsync();
        await LoadFavorites();
        FavoritesService.OnFavoritesChanged += OnFavoritesChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ThemeService.InitializeAsync();
            ThemeService.OnThemeChanged += OnThemeStateChanged;
            NavigationManager.LocationChanged += OnLocationChanged;
            
            ExpandCurrentPageGroup();
            
            StateHasChanged();
        }
    }

    private async Task LoadFavorites()
    {
        favoriteIds = (await FavoritesService.GetFavoritesAsync()).ToHashSet();
        var allTools = await ToolsService.GetAllToolsAsync();
        favoriteTools = allTools.Where(t => favoriteIds.Contains(t.Id)).ToList();
        
        if (favoriteTools.Any())
        {
            expandedGroups.Add(-1); // Auto-expand favorites
        }
    }

    private async void OnFavoritesChanged()
    {
        await LoadFavorites();
        await InvokeAsync(StateHasChanged);
    }

    private async Task ToggleFavorite(string toolId)
    {
        await FavoritesService.ToggleFavoriteAsync(toolId);
    }

    private async void OnSearchChanged(ChangeEventArgs e)
    {
        searchQuery = e.Value?.ToString() ?? string.Empty;
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            searchResults = await ToolsService.SearchToolsAsync(searchQuery);
        }
        else
        {
            searchResults.Clear();
        }
        StateHasChanged();
    }

    private string GetCategoryName(string toolId)
    {
        var category = categories.FirstOrDefault(c => c.Tools.Any(t => t.Id == toolId));
        return category?.Name ?? "";
    }

    private Icon GetIcon(string iconName)
    {
        return iconName switch
        {
            "TextDescription" => new Icons.Regular.Size20.TextDescription(),
            "ArrowSwap" => new Icons.Regular.Size20.ArrowSwap(),
            "TextCaseTitle" => new Icons.Regular.Size20.TextCaseTitle(),
            "Cut" => new Icons.Regular.Size20.Cut(),
            "NumberSymbol" => new Icons.Regular.Size20.NumberSymbol(),
            "TextBulletListSquare" => new Icons.Regular.Size20.TextBulletListSquare(),
            "DocumentMultiple" => new Icons.Regular.Size20.DocumentMultiple(),
            "LockClosed" => new Icons.Regular.Size20.LockClosed(),
            "Code" => new Icons.Regular.Size20.Code(),
            "Link" => new Icons.Regular.Size20.Link(),
            "ShieldKeyhole" => new Icons.Regular.Size20.ShieldKeyhole(),
            "BracesVariable" => new Icons.Regular.Size20.BracesVariable(),
            "DocumentText" => new Icons.Regular.Size20.DocumentText(),
            "DocumentSearch" => new Icons.Regular.Size20.DocumentSearch(),
            "Document" => new Icons.Regular.Size20.Document(),
            "Search" => new Icons.Regular.Size20.Search(),
            "ArrowRepeatAll" => new Icons.Regular.Size20.ArrowRepeatAll(),
            "ArrowExportUp" => new Icons.Regular.Size20.ArrowExportUp(),
            "Wrench" => new Icons.Regular.Size20.Wrench(),
            "CalendarClock" => new Icons.Regular.Size20.CalendarClock(),
            "TextQuote" => new Icons.Regular.Size20.TextQuote(),
            "Key" => new Icons.Regular.Size20.Key(),
            "Password" => new Icons.Regular.Size20.Password(),
            "GlobeSearch" => new Icons.Regular.Size20.GlobeSearch(),
            "NumberCircle" => new Icons.Regular.Size20.NumberCircle0(),
            _ => new Icons.Regular.Size20.Home()
        };
    }

    private void ToggleSidebar()
    {
        sidebarCollapsed = !sidebarCollapsed;
    }

    private void ExpandSidebar()
    {
        sidebarCollapsed = false;
    }

    private void ToggleMobileMenu()
    {
        mobileMenuOpen = !mobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        mobileMenuOpen = false;
    }

    private void ClearSearchAndCloseMenu()
    {
        searchQuery = string.Empty;
        searchResults.Clear();
        mobileMenuOpen = false;
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        var relativePath = NavigationManager.ToBaseRelativePath(e.Location);
        if (!string.IsNullOrEmpty(relativePath))
        {
            await UserPreferences.SetLastVisitedPageAsync("/" + relativePath);
        }
        
        ExpandCurrentPageGroup();
        mobileMenuOpen = false;
        searchQuery = string.Empty;
        searchResults.Clear();
        await InvokeAsync(StateHasChanged);
    }

    private void ExpandCurrentPageGroup()
    {
        var path = "/" + NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        var tool = categories.SelectMany(c => c.Tools).FirstOrDefault(t => t.Route == path);
        
        if (tool != null)
        {
            // If the tool is in favorites, don't expand its regular category
            if (favoriteIds.Contains(tool.Id))
            {
                return;
            }
            
            var category = categories.FirstOrDefault(c => c.Tools.Contains(tool));
            if (category != null)
            {
                expandedGroups.Add(category.Order);
            }
        }
    }

    private async Task OnThemeChanged(string value)
    {
        if (Enum.TryParse<AppTheme>(value, out var theme))
        {
            await ThemeService.SetThemeAsync(theme);
        }
    }

    private void OnThemeStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void ToggleGroup(int groupId)
    {
        if (expandedGroups.Contains(groupId))
            expandedGroups.Remove(groupId);
        else
            expandedGroups.Add(groupId);
    }

    private bool IsActive(string href)
    {
        var relativePath = "/" + NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        return href == "/" ? relativePath == "/" : relativePath == href;
    }

    private bool IsActiveInCategory(string href, bool isFavoriteSection)
    {
        var relativePath = "/" + NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        var isCurrentPage = href == "/" ? relativePath == "/" : relativePath == href;
        
        if (!isCurrentPage) return false;
        
        // If this is in favorites section, only show as active if it's actually in favorites
        if (isFavoriteSection)
        {
            var toolId = categories.SelectMany(c => c.Tools)
                .FirstOrDefault(t => t.Route == href)?.Id;
            return toolId != null && favoriteIds.Contains(toolId);
        }
        
        // If this is in regular category and the tool is in favorites, don't show active
        var tool = categories.SelectMany(c => c.Tools)
            .FirstOrDefault(t => t.Route == href);
        
        // Don't show active in regular menu if it's in favorites
        return tool != null && !favoriteIds.Contains(tool.Id);
    }

    private string GetIconColor(bool isActive) => isActive ? "#0078d4" : IconColor;

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= OnThemeStateChanged;
        NavigationManager.LocationChanged -= OnLocationChanged;
        FavoritesService.OnFavoritesChanged -= OnFavoritesChanged;
    }

    private void OnHomeClick()
    {
        UserPreferences.SkipAutoRedirect = true;
        CloseMobileMenu();
    }
}
