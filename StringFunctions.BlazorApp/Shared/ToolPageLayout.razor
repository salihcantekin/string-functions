@* 
    Reusable component for tool pages with consistent layout:
    - Compact options toolbar at top
    - Main content area with input/output panels
    - Proper z-index handling for dropdowns
    - Mobile responsive design
*@

<div class="tool-page">
    @if (Title != null || Description != null)
    {
        <div class="tool-header">
            @if (Title != null)
            {
                <h1 class="tool-title">@Title</h1>
            }
            @if (Description != null)
            {
                <p class="tool-description">@Description</p>
            }
        </div>
    }

    @if (OptionsContent != null)
    {
        <div class="options-toolbar">
            @OptionsContent
        </div>
    }

    <div class="tool-content">
        @ChildContent
    </div>
</div>

<style>
    .tool-page {
        display: flex;
        flex-direction: column;
        gap: 16px;
        height: 100%;
        min-height: 0;
    }

    .tool-header {
        flex-shrink: 0;
    }

    .tool-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0 0 4px 0;
        color: var(--text-primary);
    }

    .tool-description {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin: 0;
    }

    .options-toolbar {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        align-items: center;
        padding: 12px 16px;
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 6px;
        flex-shrink: 0;
        position: relative;
        z-index: 100;
        overflow: visible;
    }

    .options-toolbar > * {
        flex-shrink: 0;
    }

    .tool-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 0;
        position: relative;
        z-index: 1;
    }

    /* Compact option styles */
    .option-group {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .option-label {
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--text-secondary);
        white-space: nowrap;
    }

    .option-divider {
        width: 1px;
        height: 24px;
        background: var(--border-color);
        margin: 0 4px;
    }

    /* Standard Input/Output panel styles */
    .io-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
        flex: 1;
    }

    .io-panel {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .io-panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 32px;
        flex-shrink: 0;
        margin-bottom: 4px; /* Add spacing between label and textarea */
    }

    .io-panel-title {
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--text-primary);
    }

    .io-panel-stats {
        font-size: 0.8rem;
        color: var(--text-tertiary);
    }

    /* Tablet breakpoint */
    @@media (max-width: 1024px) {
        .tool-title {
            font-size: 1.25rem;
        }

        .options-toolbar {
            padding: 10px 12px;
            gap: 10px;
        }
    }

    /* Mobile breakpoint */
    @@media (max-width: 768px) {
        .tool-page {
            gap: 12px;
        }

        .tool-title {
            font-size: 1.1rem;
        }

        .tool-description {
            font-size: 0.8rem;
        }

        .options-toolbar {
            flex-direction: column;
            align-items: stretch;
            padding: 12px;
            gap: 10px;
        }

        .option-group {
            width: 100%;
        }

        .option-group fluent-select,
        .option-group fluent-text-field,
        .option-group fluent-number-field {
            flex: 1;
        }

        .option-divider {
            display: none;
        }

        .io-grid {
            grid-template-columns: 1fr;
            gap: 12px;
        }
    }

    /* Small mobile breakpoint */
    @@media (max-width: 480px) {
        .tool-title {
            font-size: 1rem;
        }

        .options-toolbar {
            padding: 10px;
        }

        .option-label {
            font-size: 0.8rem;
        }

        .io-panel-title {
            font-size: 0.85rem;
        }
    }
</style>

@code {
    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? Description { get; set; }

    [Parameter]
    public RenderFragment? OptionsContent { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
