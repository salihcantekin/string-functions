@page "/json-to-csharp"

<SeoHead Route="json-to-csharp" />
@using System.Text.Json

<PageTitle>JSON to C#</PageTitle>

<ToolPageLayout Title="JSON to C#" Description="Generate C# class definitions from JSON.">
    <OptionsContent>
        <div class="option-group">
            <span class="option-label">Class name:</span>
            <FluentTextField @bind-Value="@rootClassName" Placeholder="RootObject" Style="width: 120px;" @bind-Value:after="GenerateCSharp" />
        </div>
        <div class="option-divider"></div>
        <FluentCheckbox @bind-Value="@useRecords" Label="Use records" @bind-Value:after="GenerateCSharp" />
        <FluentCheckbox @bind-Value="@useNullable" Label="Nullable" @bind-Value:after="GenerateCSharp" />
        <FluentCheckbox @bind-Value="@useJsonAttributes" Label="JsonPropertyName" @bind-Value:after="GenerateCSharp" />
        <FluentCheckbox @bind-Value="@usePascalCase" Label="PascalCase" @bind-Value:after="GenerateCSharp" />
    </OptionsContent>
    <ChildContent>
        <div class="json-tool-grid">
            <JsonInputArea Title="JSON Input"
                          @bind-Value="@inputJson"
                          Placeholder='{"name": "John", "age": 30, "isActive": true}'
                          ShowFormatButton="true"
                          ShowCopyButton="false"
                          AutoFormat="true"
                          OnError="OnJsonError" />

            <div class="output-panel">
                <div class="output-header">
                    <span class="output-title">C# Code</span>
                    <CopyButton Text="@outputCode" />
                </div>
                <FluentTextArea Value="@outputCode" 
                               ReadOnly="true"
                               Resize="TextAreaResize.Vertical" />
            </div>
        </div>
    </ChildContent>
</ToolPageLayout>

<style>
    .json-tool-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
        flex: 1;
    }

    .output-panel {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .output-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 32px;
    }

    .output-title {
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--text-primary);
    }

    @@media (max-width: 768px) {
        .json-tool-grid {
            grid-template-columns: 1fr;
            gap: 16px;
        }
    }
</style>

@code {
    private string inputJson = string.Empty;
    private string outputCode = string.Empty;
    private string rootClassName = "RootObject";
    private bool useRecords = true;
    private bool useNullable = true;
    private bool useJsonAttributes = true;
    private bool usePascalCase = true;
    private string? jsonError;

    private void OnJsonError(string? error)
    {
        jsonError = error;
        if (string.IsNullOrEmpty(error))
        {
            GenerateCSharp();
        }
        else
        {
            outputCode = string.Empty;
        }
    }

    private void GenerateCSharp()
    {
        if (string.IsNullOrWhiteSpace(inputJson))
        {
            outputCode = string.Empty;
            return;
        }

        try
        {
            using var doc = JsonDocument.Parse(inputJson);
            var code = new System.Text.StringBuilder();
            
            code.AppendLine("using System;");
            if (useJsonAttributes)
                code.AppendLine("using System.Text.Json.Serialization;");
            code.AppendLine();
            
            GenerateClass(code, rootClassName, doc.RootElement, 0);
            
            outputCode = code.ToString();
        }
        catch
        {
            outputCode = string.Empty;
        }
    }

    private void GenerateClass(System.Text.StringBuilder sb, string className, JsonElement element, int indent)
    {
        var indentStr = new string(' ', indent * 4);
        var keyword = useRecords ? "record" : "class";
        var nullable = useNullable ? "?" : "";
        
        sb.AppendLine($"{indentStr}public {keyword} {className}");
        sb.AppendLine($"{indentStr}{{");

        if (element.ValueKind == JsonValueKind.Object)
        {
            foreach (var property in element.EnumerateObject())
            {
                var propName = usePascalCase ? ToPascalCase(property.Name) : property.Name;
                var (type, needsClass) = GetCSharpType(property.Value);
                
                if (useJsonAttributes && propName != property.Name)
                {
                    sb.AppendLine($"{indentStr}    [JsonPropertyName(\"{property.Name}\")]");
                }
                
                sb.AppendLine($"{indentStr}    public {type}{nullable} {propName} {{ get; set; }}");
                
                if (needsClass)
                {
                    sb.AppendLine();
                    GenerateClass(sb, type, property.Value, indent + 1);
                }
            }
        }

        sb.AppendLine($"{indentStr}}}");
        sb.AppendLine();
    }

    private (string type, bool needsClass) GetCSharpType(JsonElement element)
    {
        return element.ValueKind switch
        {
            JsonValueKind.String => ("string", false),
            JsonValueKind.Number => element.TryGetInt32(out _) ? ("int", false) : ("double", false),
            JsonValueKind.True or JsonValueKind.False => ("bool", false),
            JsonValueKind.Array => GetArrayType(element),
            JsonValueKind.Object => (ToPascalCase("NestedObject"), true),
            JsonValueKind.Null => ("object", false),
            _ => ("object", false)
        };
    }

    private (string type, bool needsClass) GetArrayType(JsonElement element)
    {
        var firstElement = element.EnumerateArray().FirstOrDefault();
        if (firstElement.ValueKind == JsonValueKind.Undefined)
            return ("List<object>", false);
        
        var (itemType, needsClass) = GetCSharpType(firstElement);
        return ($"List<{itemType}>", needsClass);
    }

    private string ToPascalCase(string text)
    {
        if (string.IsNullOrEmpty(text)) return text;
        var words = text.Split(new[] { '_', '-', ' ' }, StringSplitOptions.RemoveEmptyEntries);
        return string.Concat(words.Select(w => char.ToUpper(w[0]) + w.Substring(1).ToLower()));
    }
}
