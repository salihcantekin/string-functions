        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .converter-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
    }

    .number-input-section {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 16px;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .number-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .number-header h3 {
        margin: 0;
        font-size: 1rem;
        color: var(--text-primary);
        font-weight: 600;
    }

    .number-hint {
        font-size: 0.75rem;
        color: var(--text-tertiary);
        font-style: italic;
    }

    .info-section {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 20px;
    }

    .info-section h3 {
        margin: 0 0 16px 0;
        font-size: 1.1rem;
        color: var(--text-primary);
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 8px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
    }

    .info-card {
        background: var(--bg-tertiary);
        padding: 12px;
        border-radius: 6px;
    }

    .info-card h4 {
        margin: 0 0 8px 0;
        font-size: 0.9rem;
        color: var(--accent-primary);
    }

    .info-card p {
        margin: 4px 0;
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    .info-card strong {
