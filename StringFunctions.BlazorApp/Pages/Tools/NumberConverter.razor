    }

    @@media (max-width: 768px) {
        .converter-grid {
            grid-template-columns: 1fr;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }

        .number-input-section {
            padding: 12px;
        }

        .info-section {
            padding: 16px;
        }
    }
</style>

@code {
    private string decimalValue = "";
    private string binaryValue = "";
    private string hexValue = "";
    private string octalValue = "";
    private string errorMessage = "";
    private bool isUpdating = false;

    private void OnDecimalChanged()
    {
        if (isUpdating) return;
        
        errorMessage = "";
        if (string.IsNullOrWhiteSpace(decimalValue))
        {
            ClearAll(exceptDecimal: true);
            return;
        }

        if (long.TryParse(decimalValue, out long value))
        {
            isUpdating = true;
            try
            {
                binaryValue = Convert.ToString(value, 2);
                hexValue = Convert.ToString(value, 16).ToUpper();
                octalValue = Convert.ToString(value, 8);
            }
            catch (Exception ex)
            {
                errorMessage = $"Conversion error: {ex.Message}";
            }
            finally
            {
                isUpdating = false;
            }
        }
        else
        {
            errorMessage = "Invalid decimal number";
        }
    }

    private void OnBinaryChanged()
    {
        if (isUpdating) return;
        
        errorMessage = "";
        if (string.IsNullOrWhiteSpace(binaryValue))
        {
            ClearAll(exceptBinary: true);
            return;
        }

        try
        {
            long value = Convert.ToInt64(binaryValue, 2);
            isUpdating = true;
            decimalValue = value.ToString();
            hexValue = Convert.ToString(value, 16).ToUpper();
            octalValue = Convert.ToString(value, 8);
        }
        catch
        {
            errorMessage = "Invalid binary number (only 0-1 allowed)";
        }
        finally
        {
            isUpdating = false;
        }
    }

    private void OnHexChanged()
    {
        if (isUpdating) return;
        
        errorMessage = "";
        if (string.IsNullOrWhiteSpace(hexValue))
        {
            ClearAll(exceptHex: true);
            return;
        }

        try
        {
            long value = Convert.ToInt64(hexValue, 16);
            isUpdating = true;
            decimalValue = value.ToString();
            binaryValue = Convert.ToString(value, 2);
            octalValue = Convert.ToString(value, 8);
        }
        catch
        {
            errorMessage = "Invalid hexadecimal number (only 0-9, A-F allowed)";
        }
        finally
        {
            isUpdating = false;
        }
    }

    private void OnOctalChanged()
    {
        if (isUpdating) return;
        
        errorMessage = "";
        if (string.IsNullOrWhiteSpace(octalValue))
        {
            ClearAll(exceptOctal: true);
            return;
        }

        try
        {
            long value = Convert.ToInt64(octalValue, 8);
            isUpdating = true;
            decimalValue = value.ToString();
            binaryValue = Convert.ToString(value, 2);
            hexValue = Convert.ToString(value, 16).ToUpper();
        }
        catch
        {
            errorMessage = "Invalid octal number (only 0-7 allowed)";
        }
        finally
        {
            isUpdating = false;
        }
    }

    private void ClearAll(bool exceptDecimal = false, bool exceptBinary = false, bool exceptHex = false, bool exceptOctal = false)
    {
        if (!exceptDecimal) decimalValue = "";
        if (!exceptBinary) binaryValue = "";
        if (!exceptHex) hexValue = "";
        if (!exceptOctal) octalValue = "";
    }
}
