@page "/number-converter"

<SeoHead Route="number-converter" />

<PageTitle>Number Converter</PageTitle>

<ToolPageLayout Title="Number Converter" Description="Convert numbers between Binary, Decimal, Hexadecimal, and Octal formats.">
    <ChildContent>
        <div class="number-converter-layout">
            <div class="converter-grid">
                <!-- Decimal -->
                <div class="number-input-section">
                    <div class="number-header">
                        <h3>Decimal (Base 10)</h3>
                        <CopyButton Text="@decimalValue" />
                    </div>
                    <FluentTextField @bind-Value="@decimalValue" 
                                    @bind-Value:after="OnDecimalChanged"
                                    Placeholder="Enter decimal number"
                                    Style="width: 100%; font-family: monospace; font-size: 1.1rem;" />
                    <span class="number-hint">0-9 digits</span>
                </div>

                <!-- Binary -->
                <div class="number-input-section">
                    <div class="number-header">
                        <h3>Binary (Base 2)</h3>
                        <CopyButton Text="@binaryValue" />
                    </div>
                    <FluentTextField @bind-Value="@binaryValue" 
                                    @bind-Value:after="OnBinaryChanged"
                                    Placeholder="Enter binary number"
                                    Style="width: 100%; font-family: monospace; font-size: 1.1rem;" />
                    <span class="number-hint">0-1 digits only</span>
                </div>

                <!-- Hexadecimal -->
                <div class="number-input-section">
                    <div class="number-header">
                        <h3>Hexadecimal (Base 16)</h3>
                        <CopyButton Text="@hexValue" />
                    </div>
                    <FluentTextField @bind-Value="@hexValue" 
                                    @bind-Value:after="OnHexChanged"
                                    Placeholder="Enter hex number"
                                    Style="width: 100%; font-family: monospace; font-size: 1.1rem;" />
                    <span class="number-hint">0-9, A-F digits</span>
                </div>

                <!-- Octal -->
                <div class="number-input-section">
                    <div class="number-header">
                        <h3>Octal (Base 8)</h3>
                        <CopyButton Text="@octalValue" />
                    </div>
                    <FluentTextField @bind-Value="@octalValue" 
                                    @bind-Value:after="OnOctalChanged"
                                    Placeholder="Enter octal number"
                                    Style="width: 100%; font-family: monospace; font-size: 1.1rem;" />
                    <span class="number-hint">0-7 digits only</span>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <FluentMessageBar Title="Error" Intent="MessageIntent.Error">
                    @errorMessage
                </FluentMessageBar>
            }

            <!-- Info Section -->
            <div class="info-section">
                <h3>Number System Information</h3>
                <div class="info-grid">
                    <div class="info-card">
                        <h4>Decimal (Base 10)</h4>
                        <p>Standard number system using digits 0-9.</p>
                        <p><strong>Example:</strong> 42 = 42</p>
                    </div>
                    <div class="info-card">
                        <h4>Binary (Base 2)</h4>
                        <p>Used in computing, uses only 0 and 1.</p>
                        <p><strong>Example:</strong> 42 = 101010</p>
                    </div>
                    <div class="info-card">
                        <h4>Hexadecimal (Base 16)</h4>
                        <p>Compact representation, uses 0-9 and A-F.</p>
                        <p><strong>Example:</strong> 42 = 2A</p>
                    </div>
                    <div class="info-card">
                        <h4>Octal (Base 8)</h4>
                        <p>Less common, uses digits 0-7.</p>
                        <p><strong>Example:</strong> 42 = 52</p>
                    </div>
                </div>
            </div>
        </div>
    </ChildContent>
</ToolPageLayout>

<style>
