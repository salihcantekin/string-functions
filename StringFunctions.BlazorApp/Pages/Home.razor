        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        margin: 0 0 8px 0;
    }

    .hero-subtitle {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.9);
        margin: 0;
    }

    .welcome-section {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        padding: 24px;
        border-radius: 8px;
        margin-bottom: 24px;
    }

    .welcome-section h2 {
        margin: 0 0 12px 0;
