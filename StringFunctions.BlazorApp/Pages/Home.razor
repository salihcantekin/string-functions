@page "/"
@using StringFunctions.BlazorApp.Services
@using StringFunctions.BlazorApp.Models
@inject UserPreferencesService UserPreferences
@inject NavigationManager NavigationManager
@inject ToolsService ToolsService
@inject FavoritesService FavoritesService

<SeoHead Route="" />
<PageTitle>String Functions - Home</PageTitle>

<div class="home-page">
    <div class="hero-section">
        <h1 class="hero-title">? String Functions</h1>
        <p class="hero-subtitle">Powerful tools collection for developers</p>
    </div>

    <div class="welcome-section">
        <h2>Welcome!</h2>
        <p>
            A comprehensive toolkit for string operations, JSON manipulation, encoding/decoding,
            and developer utilities. Select a tool from the menu or explore the categories below.
        </p>
    </div>

    @if (favoriteTools.Any())
    {
        <div class="favorites-section">
            <div class="section-header">
                <h2>? Your Favorites</h2>
                <button class="clear-favorites-btn" @onclick="ClearFavorites">Clear All</button>
            </div>
            <div class="tools-grid compact">
                @foreach (var tool in favoriteTools)
                {
                    <a href="@tool.Route" class="tool-link">
                        <div class="tool-header">
                            <span class="tool-name">@tool.Name</span>
                            @if (tool.IsNew)
                            {
                                <span class="new-badge">NEW</span>
                            }
                        </div>
                        <span class="tool-desc">@tool.Description</span>
                    </a>
                }
            </div>
        </div>
    }

    <div class="features-grid">
        @foreach (var category in categories)
        {
            <div class="feature-card">
                <div class="feature-icon">@category.Emoji</div>
                <h3>@category.Name</h3>
                <p>@GetCategoryDescription(category)</p>
            </div>
        }
    </div>

    <div class="tools-section">
        <h2>All Tools</h2>

        @foreach (var category in categories)
        {
            <div class="category-block">
                <h3 class="category-title">@category.Emoji @category.Name</h3>
                <div class="tools-grid">
                    @foreach (var tool in category.Tools)
                    {
                        <a href="@tool.Route" class="tool-link @(tool.IsNew ? "new-badge" : "")">
                            <div class="tool-header">
                                <span class="tool-name">@tool.Name</span>
                                @if (tool.IsNew)
                                {
                                    <span class="new-badge">NEW</span>
                                }
                            </div>
                            <span class="tool-desc">@tool.Description</span>
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
