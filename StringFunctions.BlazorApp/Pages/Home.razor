<style>
    .home-page {
        max-width: 1000px;
        margin: 0 auto;
    }

    .hero-section {
        background: var(--bg-header);
        padding: 40px;
        border-radius: 12px;
        text-align: center;
        margin-bottom: 24px;
    }

    .hero-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        margin: 0 0 8px 0;
    }

    .hero-subtitle {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.9);
        margin: 0;
    }

    .welcome-section {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        padding: 24px;
        border-radius: 8px;
        margin-bottom: 24px;
    }

    .welcome-section h2 {
        margin: 0 0 12px 0;
        color: var(--text-primary);
    }

    .welcome-section p {
        margin: 0;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 12px;
        margin-bottom: 24px;
    }

    .feature-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        padding: 20px 16px;
        border-radius: 8px;
        text-align: center;
        transition: border-color 0.15s ease, transform 0.15s ease;
    }

    .feature-card:hover {
        border-color: var(--accent-primary);
        transform: translateY(-2px);
    }

    .feature-icon {
        font-size: 1.75rem;
        margin-bottom: 8px;
    }

    .feature-card h3 {
        margin: 0 0 4px 0;
        font-size: 0.9rem;
        color: var(--text-primary);
    }

    .feature-card p {
        margin: 0;
        font-size: 0.75rem;
        color: var(--text-secondary);
    }

    .tools-section {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        padding: 24px;
        border-radius: 8px;
    }

    .tools-section > h2 {
        margin: 0 0 20px 0;
        color: var(--text-primary);
    }

    .category-block {
        margin-bottom: 20px;
    }

    .category-block:last-child {
        margin-bottom: 0;
    }

    .category-title {
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0 0 12px 0;
        padding-bottom: 8px;
        border-bottom: 1px solid var(--border-color);
    }

    .tools-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 8px;
    }

    .tool-link {
        display: flex;
        flex-direction: column;
        padding: 12px 16px;
        border-radius: 6px;
        text-decoration: none;
        color: var(--text-primary);
        background: var(--bg-secondary);
        border: 1px solid transparent;
        transition: all 0.15s ease;
        position: relative;
    }

    .tool-link:hover {
        background: var(--bg-tertiary);
        border-color: var(--accent-primary);
    }

    .tool-link.new-badge::after {
        content: 'NEW';
        position: absolute;
        top: 8px;
        right: 8px;
        font-size: 0.6rem;
        font-weight: 700;
        color: white;
        background: var(--accent-primary);
        padding: 2px 6px;
        border-radius: 4px;
    }

    .tool-name {
        font-weight: 500;
        font-size: 0.9rem;
    }

    .tool-desc {
        color: var(--text-secondary);
        font-size: 0.8rem;
        margin-top: 2px;
    }

    /* Tablet breakpoint */
    @@media (max-width: 1024px) {
        .features-grid {
            grid-template-columns: repeat(3, 1fr);
        }

        .tools-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    /* Mobile breakpoint */
    @@media (max-width: 768px) {
        .hero-section {
            padding: 24px 16px;
            border-radius: 8px;
            margin-bottom: 16px;
        }

        .hero-title {
            font-size: 1.5rem;
        }

        .hero-subtitle {
            font-size: 0.9rem;
        }

        .welcome-section {
            padding: 16px;
            margin-bottom: 16px;
        }

        .features-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 8px;
            margin-bottom: 16px;
        }

        .feature-card {
            padding: 12px;
        }

        .feature-icon {
            font-size: 1.25rem;
            margin-bottom: 4px;
        }

        .feature-card h3 {
            font-size: 0.8rem;
        }

        .feature-card p {
            display: none;
        }

        .tools-section {
            padding: 16px;
        }

        .tools-grid {
            grid-template-columns: 1fr;
        }

        .tool-link {
            padding: 10px 12px;
        }
    }

    /* Small mobile breakpoint */
    @@media (max-width: 480px) {
        .hero-title {
            font-size: 1.3rem;
        }

        .features-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Check if user intentionally navigated to Home (skip redirect)
            if (UserPreferences.SkipAutoRedirect)
            {
                UserPreferences.SkipAutoRedirect = false;
                return;
            }
            
            // Auto-redirect to last visited page on initial site load
            var lastPage = await UserPreferences.GetLastVisitedPageAsync();
            if (!string.IsNullOrEmpty(lastPage) && lastPage != "/")
            {
                NavigationManager.NavigateTo(lastPage);
            }
        }
    }
}
