@page "/"

<PageTitle>String Functions - Ana Sayfa</PageTitle>

<FluentStack Orientation="Orientation.Vertical" Style="gap: 24px;">
    <FluentCard Style="padding: 30px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
        <FluentStack Orientation="Orientation.Vertical" Style="gap: 12px;">
            <FluentLabel Typo="Typography.H2" Style="color: white;">String Functions</FluentLabel>
            <FluentLabel Typo="Typography.Body" Style="color: white; opacity: 0.9;">
                String işlemleri için güçlü araçlar koleksiyonu
            </FluentLabel>
        </FluentStack>
    </FluentCard>

    <FluentCard Style="padding: 24px;">
        <FluentStack Orientation="Orientation.Vertical" Style="gap: 16px;">
            <FluentLabel Typo="Typography.H4">Hoş Geldiniz!</FluentLabel>
            <FluentLabel Typo="Typography.Body">
                Bu uygulama, string (metin) işlemleri için çeşitli araçlar sunar. 
                Sol menüden istediğiniz aracı seçerek kullanmaya başlayabilirsiniz.
            </FluentLabel>
        </FluentStack>
    </FluentCard>

    <FluentGrid>
        <FluentGridItem xs="12" sm="6" md="4">
            <FluentCard Style="padding: 20px; height: 100%;">
                <FluentStack Orientation="Orientation.Vertical" Style="gap: 12px;">
                    <FluentIcon Value="@(new Icons.Regular.Size24.TextCaseLowercase())" Color="Color.Accent" />
                    <FluentLabel Typo="Typography.H6">Metin Dönüştürme</FluentLabel>
                    <FluentLabel Typo="Typography.Body">
                        Case converter, reverse, encode/decode ve daha fazlası
                    </FluentLabel>
                </FluentStack>
            </FluentCard>
        </FluentGridItem>

        <FluentGridItem xs="12" sm="6" md="4">
            <FluentCard Style="padding: 20px; height: 100%;">
                <FluentStack Orientation="Orientation.Vertical" Style="gap: 12px;">
                    <FluentIcon Value="@(new Icons.Regular.Size24.Code())" Color="Color.Accent" />
                    <FluentLabel Typo="Typography.H6">JSON İşlemleri</FluentLabel>
                    <FluentLabel Typo="Typography.Body">
                        JSON formatter, compare, ve kod dönüştürücüleri
                    </FluentLabel>
                </FluentStack>
            </FluentCard>
        </FluentGridItem>

        <FluentGridItem xs="12" sm="6" md="4">
            <FluentCard Style="padding: 20px; height: 100%;">
                <FluentStack Orientation="Orientation.Vertical" Style="gap: 12px;">
                    <FluentIcon Value="@(new Icons.Regular.Size24.TextGrammarWand())" Color="Color.Accent" />
                    <FluentLabel Typo="Typography.H6">Regex Araçları</FluentLabel>
                    <FluentLabel Typo="Typography.Body">
                        Regex search, replace ve extract işlemleri
                    </FluentLabel>
                </FluentStack>
            </FluentCard>
        </FluentGridItem>
    </FluentGrid>

    <FluentCard Style="padding: 24px;">
        <FluentStack Orientation="Orientation.Vertical" Style="gap: 12px;">
            <FluentLabel Typo="Typography.H5">Mevcut Araçlar</FluentLabel>
            <FluentDivider Style="margin: 8px 0;" />
            <FluentStack Orientation="Orientation.Vertical" Style="gap: 8px;">
                <FluentLabel Typo="Typography.Body">✓ String Reverse - Metinleri tersine çevirin</FluentLabel>
                <FluentLabel Typo="Typography.Body">✓ Case Converter - Büyük/küçük harf dönüştürme</FluentLabel>
                <FluentLabel Typo="Typography.Body">✓ Base64 - Encode/Decode işlemleri</FluentLabel>
                <FluentLabel Typo="Typography.Body">✓ URL Encode - URL kodlama</FluentLabel>
                <FluentLabel Typo="Typography.Body">✓ JSON Formatter - JSON'u formatla</FluentLabel>
                <FluentLabel Typo="Typography.Body">✓ JSON Compare - İki JSON'u karşılaştır</FluentLabel>
                <FluentLabel Typo="Typography.Body">✓ JSON to C#/Java/TypeScript - JSON'dan kod üret</FluentLabel>
                <FluentLabel Typo="Typography.Body">✓ Regex Search/Replace - Regex araçları</FluentLabel>
                <FluentLabel Typo="Typography.Body">✓ Extract - Metinden bilgi çıkar</FluentLabel>
                <FluentLabel Typo="Typography.Body">✓ Compare - Metinleri karşılaştır</FluentLabel>
                <FluentLabel Typo="Typography.Body">✓ Trim/Pad - Boşluk işlemleri</FluentLabel>
                <FluentLabel Typo="Typography.Body">✓ Line Counter - Satır sayacı</FluentLabel>
            </FluentStack>
        </FluentStack>
    </FluentCard>
</FluentStack>
