            font-size: 1.5rem;
        }

        .hero-subtitle {
            font-size: 0.9rem;
        }

        .welcome-section {
            padding: 16px;
            margin-bottom: 16px;
        }

        .favorites-section {
            padding: 16px;
            margin-bottom: 16px;
        }

        .features-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 8px;
            margin-bottom: 16px;
        }

        .feature-card {
            padding: 12px;
        }

        .feature-icon {
            font-size: 1.25rem;
            margin-bottom: 4px;
        }

        .feature-card h3 {
            font-size: 0.8rem;
        }

        .feature-card p {
            display: none;
        }

        .tools-section {
            padding: 16px;
        }

        .tools-grid {
            grid-template-columns: 1fr;
        }

        .tools-grid.compact {
            grid-template-columns: 1fr;
        }

        .tool-link {
            padding: 10px 12px;
        }
    }

    @@media (max-width: 480px) {
        .hero-title {
            font-size: 1.3rem;
        }

        .features-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

@code {
    private List<ToolCategory> categories = new();
    private List<Tool> favoriteTools = new();

    protected override async Task OnInitializedAsync()
    {
        categories = await ToolsService.GetCategoriesAsync();
        await LoadFavorites();
        FavoritesService.OnFavoritesChanged += OnFavoritesChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (UserPreferences.SkipAutoRedirect)
            {
                UserPreferences.SkipAutoRedirect = false;
                return;
            }
            
            var lastPage = await UserPreferences.GetLastVisitedPageAsync();
            if (!string.IsNullOrEmpty(lastPage) && lastPage != "/")
            {
                NavigationManager.NavigateTo(lastPage);
            }
        }
    }

    private async Task LoadFavorites()
    {
        var favoriteIds = await FavoritesService.GetFavoritesAsync();
        var allTools = await ToolsService.GetAllToolsAsync();
        favoriteTools = allTools.Where(t => favoriteIds.Contains(t.Id)).ToList();
    }

    private async void OnFavoritesChanged()
    {
        await LoadFavorites();
        await InvokeAsync(StateHasChanged);
    }

    private async Task ClearFavorites()
    {
        await FavoritesService.ClearAllAsync();
    }

    private string GetCategoryDescription(ToolCategory category)
    {
        return category.Id switch
        {
            "text" => "Case converter, reverse, line operations and more",
            "encode" => "Base64, URL encoding, hash generation",
            "json" => "Formatter, compare, and code generators",
            "regex" => "Search, replace and extract with patterns",
            "developer" => "DateTime/String formatters, GUID generator",
            _ => ""
        };
    }

    public void Dispose()
    {
        FavoritesService.OnFavoritesChanged -= OnFavoritesChanged;
    }
}
