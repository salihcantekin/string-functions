    }

    .welcome-section p {
        margin: 0;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .favorites-section {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        padding: 24px;
        border-radius: 8px;
        margin-bottom: 24px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .section-header h2 {
        margin: 0;
        color: var(--text-primary);
    }

    .clear-favorites-btn {
        padding: 6px 12px;
        border: 1px solid var(--border-color);
        background: var(--bg-secondary);
        color: var(--text-secondary);
